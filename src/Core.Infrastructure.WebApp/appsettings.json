{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "McpServers": {
    "chronos": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "DefaultTimeZoneId=Europe/Amsterdam",
        "aadversteeg/chronos-mcp-server:latest"
      ]
    }
  }
}
